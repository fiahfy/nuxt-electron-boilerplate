{
  "name": "nuxt-electron-sample",
  "version": "1.0.0",
  "description": "Nuxt + Electron",
  "author": "fiahfy <d.fiahfy@gmail.com>",
  "private": true,
  "main": "main.js",
  "build": {
    "appId": "",
    "directories": {
      "buildResources": "static"
    },
    "files": [
      ".nuxt/**/*",
      "node_modules/**/*",
      "main.js",
      "nuxt.config.js"
    ],
    "mac": {
      "target": ["dmg"]
    }
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=DEV electron .",
    "build": "nuxt build && electron-builder"
  },
  "dependencies": {
    "nuxt": "^1.4.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "cross-env": "^5.1.4",
    "electron": "2.0.0-beta.7",
    "electron-builder": "^20.8.1",
    "electron-devtools-installer": "^2.2.3",
    "eslint": "^4.15.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-vue": "^4.0.0"
  }
}
